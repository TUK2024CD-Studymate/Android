<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".board.BoardInsideActivity">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       tools:ignore="ScrollViewCount">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">
          <ImageView
              android:id="@+id/backImg"
              android:layout_width="35dp"
              android:layout_height="35dp"
              android:layout_marginTop="10dp"
              android:layout_marginStart="10dp"
              android:src="@drawable/baseline_arrow_back_24"/>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="15dp"
              android:orientation="vertical">

              <TextView
                  android:id="@+id/category"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="자유게시판"
                  android:layout_marginStart="15dp"
                  android:textSize="17sp"
                  android:textColor="@color/lightGray"/>

              <TextView
                  android:id="@+id/title"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="15dp"
                  android:text="다들 즐거운 연휴되세요!!"
                  android:textSize="30sp"
                  android:textColor="@color/black"/>

          </LinearLayout>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

              <de.hdodenhof.circleimageview.CircleImageView
                  android:id="@+id/userImg"
                  android:layout_width="60dp"
                  android:layout_height="60dp"
                  android:layout_marginStart="15dp"
                  android:background="@android:color/transparent"
                  android:src="@drawable/baseline_perm_identity_24" />

              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">
                  <TextView
                      android:id="@+id/nickname"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="닉네임"
                      android:layout_marginTop="10dp"
                      android:textSize="17sp"
                      android:textColor="@color/black"/>

                  <TextView
                      android:id="@+id/date"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="2024.02.13.11:19"
                      android:textSize="17sp"
                      android:textColor="@color/black"/>


              </LinearLayout>
              <android.widget.Button
                  android:id="@+id/deleteBtn"
                  android:layout_width="70dp"
                  android:layout_height="40dp"
                  android:text="삭제"
                  android:background="@drawable/shape_clicked"
                  android:layout_marginStart="50dp"
                  android:layout_gravity="center"
                  tools:ignore="ContentDescription" />

          </LinearLayout>

          <View
              android:id="@+id/lineView"
              android:layout_marginTop="20dp"
              android:layout_width="380dp"
              android:layout_gravity="center"
              android:layout_height="2dp"
              android:background="@color/lightGray"/>

          <TextView
              android:id="@+id/content"
              android:layout_width="380dp"
              android:layout_height="170dp"
              android:layout_marginTop="15dp"
              android:layout_marginStart="15dp"
              android:text="다들 즐거운 연휴되세요!!\n  \n소소한 보상이지만 필요하신분들은 사용한안에 챙겨가세요!"
              android:textSize="20sp"
              android:textColor="@color/black"/>


          <View
              android:layout_marginTop="20dp"
              android:layout_width="380dp"
              android:layout_gravity="center"
              android:layout_height="2dp"
              android:background="@color/lightGray"/>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginTop="15dp"
              android:orientation="vertical">

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:orientation="horizontal">

                  <EditText
                      android:id="@+id/editComment"
                      android:layout_width="300dp"
                      android:layout_height="wrap_content"
                      android:hint="댓글을 입력해보세요"/>

                  <android.widget.Button
                      android:id="@+id/postBtn"
                      android:layout_width="wrap_content"
                      android:layout_height="35dp"
                      android:textColor="@color/black"
                      android:text="@string/post"
                      android:textSize="18sp"
                      android:gravity="center"
                      android:background="@drawable/assign_button"/>


              </LinearLayout>

              <androidx.recyclerview.widget.RecyclerView
                  android:id="@+id/recyclerView"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"/>


          </LinearLayout>

      </LinearLayout>
   </ScrollView>

</LinearLayout>

